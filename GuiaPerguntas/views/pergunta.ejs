<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>

        <hr>
        <h3>Responda</h3>

        <form method="POST" action="/responder">
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta..." name="corpo" class="form-control"></textarea>

            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>"></input>

            <br>
            <button class="btn btn-success">Responder</button>
        </form>

        <hr>

        <% respostas.forEach(item =>{ %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= item.corpo %></p>
                </div>
            </div>
        <% }) %>
        
    </div>
</body>
<%- include('partials/footer.ejs') %>